@{
    ViewData["Title"] = "Create Page";
}
@model lab6_3.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ProductName"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="ProductName" />
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Price"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Price" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Quantity"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Quantity" />
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" class="btn btn-primary form-control" value="Create" />
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}