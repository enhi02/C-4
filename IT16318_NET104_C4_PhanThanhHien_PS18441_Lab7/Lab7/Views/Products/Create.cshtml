@model Lab7.Models.Products

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Create product</h4>
<hr />
<div class="border container" style="padding:30px">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ProductName"></label>
            </div>
            <div class="col-6">
                <input asp-for="ProductName" class="form-control" />
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="IdCat"></label>
            </div>
            <div class="col-6">
                <select class="form-control" asp-items="@ViewBag.IdCat" asp-for="IdCat">
                    <option value="0">Loại sản phẩm</option>
                </select>
            </div>
        </div> <div class="form-group row">
            <div class="col-3">
                <label asp-for="Color"></label>
            </div>
            <div class="col-3">
                <input asp-for="Color" class="form-control" />
            </div>
            <p asp-validation-for="Color" class="text-danger"></p>
            <div class="col-1">
                <label asp-for="UnitPrice"></label>
            </div>
            <div class="col-2">
                <input asp-for="UnitPrice" class="form-control" />
            </div>
            <span asp-validation-for="UnitPrice" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="AvailableQuantity"></label>
            </div>
            <div class="col-2">
                <input asp-for="AvailableQuantity" class="form-control" />
            </div>
            <p asp-validation-for="AvailableQuantity" class="text-danger"></p>
            <div class="col-1 offset-1">
                <label asp-for="Img"></label>
            </div>
            <div class="col-2">
                <input asp-for="Img" type="file" />
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group offset-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group ml-1">
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
