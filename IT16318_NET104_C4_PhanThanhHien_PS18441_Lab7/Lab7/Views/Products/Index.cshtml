@model IEnumerable<Lab7.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sản phẩm hiện có</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container row p-0 m-0">
    <div class="col-12 border mt-3">
        @foreach (Products item in Model)
        {
            <div class="float-left ml-sm-5 mb-5">
                <div>
                    <a asp-controller="Products" asp-action="Details" asp-route-idcat="@item.IdCat" asp-route-id="@item.ProductId"   class="img-fluid mt-4"><img src="/Images/@item.Img" style="width: 200px ; height:200px; " /></a>
                </div>
                <div>
                    <p class="text-uppercase" style="font-weight:600;text-align:center">@item.ProductName</p>
                </div>
            </div>
        }

    </div>
</div>

